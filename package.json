{
  "name": "gobol",
  "description": "GOBOL Language Server extention for vscode",
  "author": "Jo√£o Machado",
  "publisher": "popandboom",
  "license": "MIT",
  "version": "1.0.0",
  "categories": [],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [ "onLanguage:cobol" ],
  "main": "./client/out/extension.js",
  "files": [
    "client/out"
  ],
  "contributes": {
    "languages": [
      {
        "id": "cobol",
        "aliases": ["COBOL", "cobol"],
        "extensions": [".cbl", ".cob", ".pcod", ".PCOD"]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./client/tsconfig.json",
    "watch": "tsc -p ./client/tsconfig.json -w",
    "postinstall": "cd client && npm install && cd .. && npm run setup_server",
    "setup_server": "curl -fsS https://raw.githubusercontent.com/jtomaspm/GOBOL-LSP/refs/heads/main/scripts/install.sh | sh",
    "dev": "npm run compile && npm run postinstall && npm run watch"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "typescript": "^5.2.2"
  }
}
